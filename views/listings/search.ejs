<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <% if (results && results.length > 0) { %>
        <% results.forEach(listing => { %>
            <div class="col-8 offset-3">
                <h3><b><%= listing.title %></b></h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text"><b>Description :</b> <br> <%= listing.description %><br></p>
                    <p class="card-text"><b>Price :</b>  &#8377; <%= listing.price.toLocaleString("en-IN") %><br></p>
                    <p class="card-text"><b>Location : </b><%= listing.location %><br></p>
                    <p class="card-text"><b>Country : </b><%= listing.country %><br></p>
                </div>
            </div>
        <% }) %>
    <% } else if (results) { %>
        <div class="alert alert-danger alert-dismissible fade show col-5 offset-3 mt-3" role="alert">
            No results found !
            <button type="button" class="btn-close" data-bs-dismiss="alert" area-label="Close"></button>
        </div>
    <% } %>
</div>