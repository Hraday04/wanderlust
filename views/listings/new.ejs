<% layout("layouts/boilerplate") %>

    <h3>Create a new Listing</h3>

    <div class="row">
        <div class="col-8 offset-2">

    <form action="/listings" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="listing[title]" class="form-label">Title : </label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control"> 
        </div>

        <div class="mb-3">
        <label for="listing[description]" class="form-label">Description : </label>
        <textarea name="listing[description]" placeholder="Enter Description" type="text" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="listing[image]" class="form-label">Upload Image : </label>
            <input name="listing[image]" type="file" class="form-control" placeholder="Enter image URL/Link">required </input>
         </div>

        <div class="mb-3">
        <label for="listing[price]" class="form-label">Price : </label>
        <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control"> 
        </div>

        <div class="mb-3">
        <label for="listing[location]" class="form-label">Location : </label>
        <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control"> 
        </div>

        <div>
        <label for="listing[country]" class="form-label">Country : </label>
        <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control">
        </div>

        <br>
        <button class="btn btn-dark add-btn">Submit</button>
        <br><br>
    </form> 
</div>
</div>